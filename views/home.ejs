<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Home | Question Collection</title>
  <link rel="stylesheet" href="home.css" />
</head>
<body>
  <%- include("./components/navbar.ejs") %>

  <main class="container">
    <% if (success) { %>
      <div class="alert-success"><%- success %></div>
    <% } %>

    <h1 class="page-title">ðŸ“š Questions Collection</h1>

    <% data.forEach((item) => { %>
      <div class="card" onclick="location.href='/question/<%- item.id %>'">
        <h2 class="question"><%- item.title %></h2>
        <img src="<%- item.image %>" alt="Question Image" class="question-image" />
        <p class="description"><strong>Description:</strong> <span><%- item.description %></span></p>
        <p class="author"><strong>Asked by:</strong> <span><%- item.user.username %></span></p>
        <p class="date"><strong>Date:</strong> <span><%= new Date(item.updatedAt).toDateString() %></span></p>
      </div>
    <% }) %>
  </main>

  <%- include("./components/footer.ejs") %>
</body>
</html>
