<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Single Question</title>
  <link rel="stylesheet" href="/singleQuestion.css" />
</head>
<body>
  <%- include("../components/navbar.ejs") %>

  <div class="content-wrapper">
    <div class="container">
      <h2>Question</h2>
      <div class="card" style="cursor: pointer; justify-items: center;">
        <p class="question"><%- data[0].title %></p>
        <img src="<%- data[0].image %>" alt="Question Image" class="question-image" height="200px" width="300px" />
        <p class="description">Description: <span><%- data[0].description %></span></p>
        <p class="date">Date: <span><%= new Date(data[0].updatedAt).toDateString() %></span></p>
        <p class="author">Asked by: <span><%- data[0].user.username %></span></p>
      </div>
    </div>

    <div class="container answer">
      <h2>Answer</h2>
      <% answers.forEach((answer) => { %>
        <div class="card">
          <p class="answer">Answer: <span><%- answer.answerText %></span></p>
          <p class="date">Date: <span><%= new Date(answer.updatedAt).toDateString() %></span></p>
          <p class="author">Answered by: <span><%- answer.user.username %></span></p>
          <button onclick="likePost(<%= answer.id %>)">Like</button>
          <span id="likes-<%= answer.id %>"><%= answer.likes || 0 %></span>

        </div>
      <% }) %>
    </div>

    <div class="container answerSection" >
      <h2>Submit Your Answer</h2>
      <form action="/answer/<%- data[0].id %>" method="POST">
        <textarea name="answer" placeholder="Write your answer here..." id="answer" cols="10" rows="10" required></textarea><br>
        <button type="submit" class="submit-btn">Submit Answer</button>
      </form>
    </div>
  </div>
  
  <script src="/socket.io/socket.io.js"></script>
  <script>
  // Function to get a specific cookie by name
  function getCookie(name) {
    const value = `; ${document.cookie}`;
    const parts = value.split(`; ${name}=`);
    if (parts.length === 2) return parts.pop().split(';').shift();
    return null;
  }

  const socket = io();
  const jwtToken = getCookie('jwtToken');
  // console.log("JWT Token:", jwtToken)

    function likePost(answerId) {
      if (!jwtToken) {
        console.log("No JWT token found. Please log in.");
        alert("You must be logged in to like an answer.");
        return;
      }
      socket.emit("like", { 
        answerId: answerId,
        token: jwtToken
      });
    }
    socket.on("likeUpdate", ({likesCount, answerId}) => {
      console.log("Likes count updated:", likesCount);
      const likes = document.getElementById(`likes-${answerId}`);
      if (likes) {
     likes.textContent = likesCount;
  } else {
    console.error(`Element with ID likes-${answerId} not found`);
  }
    });

    socket.on("error", ({ message }) => {
    console.error("Server error:", message);
    alert(message);
  });
  </script>

  <%- include("../components/footer.ejs") %>
  
</body>
</html>
